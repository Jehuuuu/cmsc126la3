{
  "version": 2,
  "name": "pathfinding-adventure",
  "buildCommand": "npm run build || echo 'No build step'",
  "outputDirectory": ".",
  "cleanUrls": true,
  "builds": [
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { 
      "src": "/(.*)",
      "headers": { 
        "cache-control": "s-maxage=1, stale-while-revalidate=59" 
      },
      "dest": "/index.html"
    }
  ],
  "github": {
    "silent": false,
    "autoAlias": true
  }
} 